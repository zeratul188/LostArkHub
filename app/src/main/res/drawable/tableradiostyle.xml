<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="#80aaaaaa"
                        android:width="2dp"/>
                </shape>
            </item>
            <item android:left="2dp" android:top="2dp" android:right="2dp">
                <shape>
                    <solid android:color="#1d2026"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <stroke android:color="#80aaaaaa"
                        android:width="2dp"/>
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape>
                    <solid android:color="#262931"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>