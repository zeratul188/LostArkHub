<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:left="-2dp"
                android:right="-2dp">
                <shape>
                    <solid android:color="#40FE6E0E"/>
                    <stroke android:color="#80FE6E0E"
                        android:width="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape>
            <solid android:color="#00000000"/> <!--#2a3c35-->
        </shape>
    </item>
</selector>