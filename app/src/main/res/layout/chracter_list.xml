<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/chracter_background"
    android:id="@+id/layoutTitle"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!--<de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@drawable/job_background"
            android:layout_margin="10dp"
            android:src="@drawable/jbi1"
            android:padding="2dp"
            android:id="@id/imgJob"/>-->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/layoutImage">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/jbi1"
                android:id="@id/imgJob"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imageopacitygradientstyle_right"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:id="@+id/layoutMain"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtName"
                    android:text="캐릭터 이름"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtServer"
                    android:text="서버"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fe6e0e"
                    android:textSize="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level : "
                    android:textColor="#aaaaaa"
                    android:textSize="12dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtLevel"
                    android:text="9999"
                    android:textColor="#FFFFFF"
                    android:textSize="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtJob"
                    android:text="직업"
                    android:textColor="#92C52D"
                    android:textSize="14dp"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtProgress"
                    android:text="100%"
                    android:textSize="18dp"
                    android:layout_gravity="bottom"
                    android:textColor="#FE6E0E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진행도"
                    android:id="@+id/txtProgressInfo"
                    android:layout_gravity="bottom"
                    android:textSize="10dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#AAAAAA"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_baseline_star_border_24"
                    android:scaleType="fitXY"
                    android:id="@+id/imgbtnFavorite"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:scaleType="fitXY"
                    android:id="@+id/imgbtnEdit"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:src="@drawable/ic_notifications_black_24dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom"
                    android:id="@+id/imgbtnNotication"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="bottom"
                    android:id="@+id/imgbtnDelete"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="4dp"
            android:layout_marginTop="50dp"
            android:rotation="270"
            android:layout_marginLeft="-48dp"
            android:layout_marginRight="-48dp"
            android:id="@+id/layoutProgress"
            android:orientation="vertical">
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="3"
                android:max="10"
                android:progressDrawable="@drawable/progress_style"
                android:id="@+id/progressHomework"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>