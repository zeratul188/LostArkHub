<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="10dp"
    android:fillViewport="true"
    android:background="#262931"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#191b20">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="적용된 프리셋이 없음"
            android:id="@+id/txtPresetName"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="#FFFFFF"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/titlebuttonstyle"
            android:text="프리셋"
            android:textSize="18sp"
            android:id="@+id/btnPreset"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#1d2026"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtSkillPoint"
                    android:text="0/0"
                    android:textColor="#ffffff"
                    android:layout_marginRight="5dp"
                    android:textSize="25sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스킬 포인트"
                    android:textSize="10sp"
                    android:textColor="#aaaaaa"/>
            </LinearLayout>
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="6dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:progress="0"
                android:max="100"
                android:progressDrawable="@drawable/progress_style"
                android:id="@+id/progressSkill"/>
        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/yesbuttonstyle"
            android:text="설정"
            android:textSize="18sp"
            android:id="@+id/btnSkillSetting"
            android:textColor="#ffffff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#191b20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="스킬"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="#FFFFFF"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:spinnerMode="dropdown"
            android:background="#00000000"
            android:id="@+id/sprJob"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="5dp"
        android:divider="#2A2D35"
        android:background="#1d2026"
        android:id="@+id/listView"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/nobuttonstyle"
            android:text="초기화"
            android:textSize="18sp"
            android:id="@+id/btnReset"
            android:textColor="#ffffff"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/yesbuttonstyle"
            android:text="새로고침"
            android:textSize="18sp"
            android:id="@+id/btnSave"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>