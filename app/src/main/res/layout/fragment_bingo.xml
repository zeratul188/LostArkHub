        </TableLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/txtInfo"
            android:text="첫번째 지점을 선택하세요"
            android:gravity="center"
            android:background="#1d2026"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:background="#1d2026">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtPass"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빙고 횟수"
                android:textSize="14sp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="bottom"
                android:textColor="#888888"/>
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtBomb"
                android:textSize="24sp"
                android:textColor="#FFFFFF"
                android:layout_gravity="bottom"
                android:gravity="right"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="번째 폭탄"
                android:textSize="14sp"
                android:layout_gravity="bottom"
                android:textColor="#888888"/>
        </LinearLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnRandom"
                    android:text="첫시작 랜덤 배치"
                    android:textSize="14sp"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_baseline_not_started_24"
                    android:drawablePadding="10dp"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnUndo"
                    android:text="되돌리기"
                    android:textSize="14sp"
                    android:gravity="left|center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@drawable/ic_baseline_undo_24"
                    android:textColor="#FFFFFF"/>
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnPass"
                    android:text="이난나 사용"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_baseline_verified_user_24"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnInfinity"
                    android:text="제한없이 진행 켜기"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_baseline_cancel_schedule_send_24"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
            </TableRow>
            <TableRow>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnReset"
                    android:text="초기화"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_id_reset_24"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/btnHell"
                    android:text="헬 모드 켜기"
                    android:gravity="left|center"
                    android:drawableLeft="@drawable/ic_baseline_castle_24"
                    android:drawablePadding="10dp"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>