<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#222222"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모험섬"
                android:textSize="18sp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtIslandDate"
                android:text="[Island Start Date] ~ [Island End Date]"
                android:textSize="14sp"
                android:textColor="#aaaaaa"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgIsland1"
                android:background="@drawable/roundimage"
                android:layout_marginRight="5dp"
                android:src="@drawable/is1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgIsland2"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/roundimage"
                android:src="@drawable/is2"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgIsland3"
                android:background="@drawable/roundimage"
                android:layout_marginLeft="5dp"
                android:src="@drawable/is3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name]"
                android:id="@+id/txtIsland1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFCA45"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name]"
                android:id="@+id/txtIsland2"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFCA45"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name]"
                android:id="@+id/txtIsland3"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFCA45"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name Award]"
                android:id="@+id/txtIslandAward1"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#AAAAAA"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name Award]"
                android:id="@+id/txtIslandAward2"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#AAAAAA"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="[Island Name Award]"
                android:id="@+id/txtIslandAward3"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#AAAAAA"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도전 가디언 토벌"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"
            android:textColor="#FFFFFF"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:src="@drawable/bs1"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundimage"
                android:id="@+id/imgBoss1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBoss1"
                    android:text="[Boss Name]"
                    android:textSize="18sp"
                    android:textColor="#FFCA45"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStartBoss1"
                    android:text="[Start Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEndBoss1"
                    android:text="[End Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:src="@drawable/bs2"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundimage"
                android:id="@+id/imgBoss2"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBoss2"
                    android:text="[Boss Name]"
                    android:textSize="18sp"
                    android:textColor="#FFCA45"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStartBoss2"
                    android:text="[Start Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEndBoss2"
                    android:text="[End Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="100dp"
                android:src="@drawable/bs3"
                android:scaleType="centerCrop"
                android:layout_marginRight="5dp"
                android:background="@drawable/roundimage"
                android:id="@+id/imgBoss3"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtBoss3"
                    android:text="[Boss Name]"
                    android:textSize="18sp"
                    android:textColor="#FFCA45"
                    android:layout_marginBottom="7dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtStartBoss3"
                    android:text="[Start Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="~"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtEndBoss3"
                    android:text="[End Date]"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="#AAAAAA"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>