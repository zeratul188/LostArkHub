<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="200dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/imgJob"
        android:scaleType="centerCrop"
        android:layout_gravity="right"
        android:src="@drawable/jb1"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:src="@drawable/imageopacitygradientstyle_left_black"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/newimageopacitygradientstyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="30dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtName"
            android:text="Chracter Name"
            android:textColor="#FFCA45"
            android:textSize="20sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLevel"
                android:text="9999"
                android:textSize="14sp"
                android:textColor="#AAAAAA"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="level"
                android:textSize="10sp"
                android:layout_marginLeft="2sp"
                android:textColor="#888888"/>
            <ImageView
                android:layout_width="14sp"
                android:layout_height="14sp"
                android:src="@drawable/ic_point"
                android:padding="5sp"
                android:layout_gravity="center"
                android:layout_marginLeft="2sp"
                android:layout_marginRight="2sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtJob"
                android:text="직업"
                android:textColor="#AAAAAA"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>